<div class="modal" style="@(IsVisible ? "display:block;" : "display:none;")">
    <div class="modal-content">
        <span class="close" @onclick="HideModal">&times;</span>
        <h2 style="text-align: center;">Are You sure?</h2>
        <p style="text-align: center;">you can press the button, but no one is Coming.</p>
        <button class="sosButton">SOS</button>
        <br>
        <button @onclick="HideModal">Close</button>
    </div>
</div>

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback HideModal { get; set; }
}
